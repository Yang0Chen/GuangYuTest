using System;
using System.Collections;
using System.Collections.Generic;
namespace GuangYu
{
	class MainClass
	{

		public static int maxLength(String str){ 
			char[] _str = str.ToCharArray ();

			if(str==null||str.Equals("")){  
				return 0;  
			}  
			HashSet<char> sets = new HashSet<char> (); 
			int maxLength=0;  
			int pre=0;  
			int after=0;  
			while(after<str.Length){  
				if(!sets.Contains(_str[after])){  
					sets.Add(_str[after]);  
					after++;  
				}else{  
					sets.Clear ();  
					if((after-pre)>maxLength){  
						maxLength=after-pre;  
					}  
					pre++;  
					after=pre;  
				}  
			}  

			if((after-pre)>maxLength){  
				maxLength=after-pre;  
			}  
			return maxLength;  
		}  
		public static void Main(String[] args) {  
			String str="abcabcaa";  
			Console.WriteLine (str);
			Console.WriteLine (maxLength(str)); 

		}  

	}
}  
